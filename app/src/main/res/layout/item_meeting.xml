<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_meeting_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Pazartesi Toplantısı"
        android:textColor="@color/base_turkuaz"
        android:fontFamily="@font/signika_semibold"
        android:textSize="25sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/signika_regular"
            android:textSize="18sp"
            android:lines="1"
            android:text="Kod: "
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/tv_meeting_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/base_orange"
            android:layout_marginTop="3dp"
            android:lines="1"
            android:fontFamily="@font/signika_bold"
            android:textSize="20sp"
            tools:text="C5F21"
            android:layout_marginBottom="5dp"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_copy"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:scaleType="fitStart"
            android:background="@null"
            android:src="@drawable/ic_copy"
            android:layout_marginStart="10dp"/>

    </LinearLayout>

    <View
        android:id="@+id/seperator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="8dp"
        android:background="@color/white"/>

</LinearLayout>